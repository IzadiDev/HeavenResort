@model List<VillaNumberDTO>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New VillaNumber</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    VillaNO
                </th>
                <th>
                    SpecialDetails
                </th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.VillaNo</td>
                    <td>@item.SpecialDetails</td>
                    <td>
                    <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" class="btn btn-success" asp-route-villaNO="@item.VillaNo"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" class="btn btn-danger" asp-route-villaNO="@item.VillaNo"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>